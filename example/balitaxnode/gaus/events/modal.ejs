<div class="modal fade" data-backdrop="static" id="modal-events" role="dialog" area-labelledby="modal-label">
    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="modal-label">Catat Events Penting Anda</h4>
          </div>
          <div class="modal-body">
            
            <form role="form" id="user-form" method="post" action="/events">
              <div class="form-group">
                <label for="username">Nama Event</label>
                <input type="hidden" name="id_event" id="id_event" value=""/>
                <input type="text" class="form-control" name="nama_event" id="nama_event" placeholder="Nama Event..." required>
              </div>
              <div class="form-group">
                <label for="password">Tanggal dan Jam Mulai <small class="pass-info"></small></label>
                <input type="date" class="form-control" name="tgl_mulai" id="tgl_mulai" placeholder="Tanggal Mulai..." required>
                <br />
                <input type="time" class="form-control" name="jam_mulai" id="jam_mulai" placeholder="Jam Mulai..." required>
              </div>
              <div class="form-group">
                <label for="password">Tanggal dan Jam Selesai <small class="pass-info"></small></label>
                <input type="date" class="form-control" name="tgl_selesai" id="tgl_selesai" placeholder="Tanggal Selesai..." required>
                <br />
                <input type="time" class="form-control" name="jam_selesai" id="jam_selesai" placeholder="Jam Selesai..." required>
              </div>
              
              <label class="radio-inline">
                <input type="radio" name="status_event_1" value="1" checked> Perlu Hadir
              </label>
              <label class="radio-inline">
                <input type="radio" name="status_event_2" value="2"> Di Usahakan Hadir
              </label>
              <label class="radio-inline">
                <input type="radio" name="status_event_3" value="3"> Kehadiran Santai
              </label>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="save-user"><i class="fa fa-save"></i> Simpan</button>
              </div>
            </form> 
          </div>
         
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
