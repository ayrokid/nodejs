<%- include ../../views/header.ejs %>
<div class="page-container">

<div class="row">
	<div class="col-md-11">
		<form role="form" id="user-form" method="post" action="/profil/save">
			<div class="form-group">
				<label for="username">Nama Lengkap</label>
				<input type="hidden" name="user_id" id="user_id" value="<%= user_id %>"/>
				<input type="text" class="form-control" name="nama_lengkap" value="<%- nama_lengkap %>">
			</div>
			<div class="form-group">
				<label for="password">Email <small class="pass-info"></small></label>
				<input type="email" class="form-control" name="email" value="<%= email %>" required>
			</div>
			<div class="form-group">
				<label for="password">Username <small class="pass-info"></small></label>
				<input type="text" class="form-control" name="username" value="<%= username %>" required>
			</div>
			<div class="form-group">
				<label for="password">Password <small class="pass-info"></small></label>
				<input type="password" class="form-control" name="password" placeholder="Kosongkan Jika Tidak Di Rubah" >
				<spans style="color:red"><i class="fa fa-tags"></i> Kosongkan Jika Tidak Di Rubah</span>
			</div>
			
			<label class="radio-inline">
				<input type="radio" id="status-active" name="aktif" value="Y" checked> Aktif
			</label>
			<label class="radio-inline">
				<input type="radio" id="status-inactive" name="aktif" value="T"> Blok
			</label>
			
			<div class="modal-footer">
				<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Simpan</button>
			</div>
		</form>
	</div>
</div>

</div>
